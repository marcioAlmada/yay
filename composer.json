{
    "name": "yay/yay",
    "description": "A high level PHP Pre-Processor",
    "license": "MIT",
    "keywords": [
        "pre-processor",
        "language",
        "syntax"
    ],
    "authors": [
        {
            "name": "MÃ¡rcio Almada",
            "email": "marcio3w@gmail.com",
            "homepage": "https://github.com/marcioAlmada"
        }
    ],
    "require": {
        "php": "7.*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "nikic/php-parser": "^2.1|^3.0|^4.0",
        "docopt/docopt": "^1.0"
    },
    "autoload": {
        "files": [
            "src/parsers.php",
            "src/parsers_internal.php",
            "src/expanders.php"
        ],
        "psr-4": {
            "Yay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yay\\": "tests/"
        },
        "files": [
            "tests/fixtures/parsers.php",
            "tests/fixtures/expanders.php"
        ]
    },
    "bin": [
        "bin/yay",
        "bin/yay-pretty"
    ],
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "phpbench/phpbench": "@dev"
    },
    "scripts": {
        "test": "phpunit"
    }
}
